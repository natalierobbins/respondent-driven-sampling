{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "declaration": true,
        "outDir": "./build",
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "types": [
            "node",
            "jest"
        ],
        "lib": [
            "ES2022"
        ]
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "**/*.test.ts",
        "**/*.test.js"
    ],
    "ts-node": {
        "esm": true
    }
}